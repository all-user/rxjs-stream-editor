*
  position relative
  box-sizing border-box
  user-select none

@keyframes packet-motion
  0%
    transform translateX(0px)
  100%
    transform translateX(585px)

.container
  position absolute
  top 0
  left 0
  display flex
  flex-flow row nowrap
  align-items center
  justify-content center
  width auto
  min-width 100%
  height 100%
  .streams
    flex 0 0 auto
    width 1200px
    height auto
    display flex
    flex-flow column nowrap
    align-items flex-start
    justify-content center
    background-color rgba(0,0,0,.05)
    border solid 1px rgba(0,0,0,.1)
    box-sizing content-box
    overflow hidden
    .stream-wrapper
      flex 0 0 auto
      display flex
      flex-flow row nowrap
      margin 10px 0
      .source-code
        flex 0 0 auto
        display flex
        flex-flow row nowrap
        align-items center
        padding 10px
        width 600px
        height 80px
        background-color rgba(0,0,0,.05)
        border solid 1px rgba(0,0,0,.1)
        pre
          color rgba(0,0,0,.6)
          font-size 14px
          font-family 'Fira Code', Menlo, monospace
          line-height 1.7em
          .syntax-stream
            color mediumturquoise
          .syntax-operator
            color tomato
          .syntax-comment
            color darkgrey
      .stream
        width 700px
        height 80px
        display flex
        flex-flow row nowrap
        align-items stretch
        &::before
          content ''
          display block
          position absolute
          width 100%
          height 1px
          background-color rgba(0,0,0,.5)
          top 0
          bottom 0
          margin auto
        /deep/ .packet
          position absolute
          top -100%
          bottom -100%
          margin auto
          left 0
          flex 0 0 auto
          animation packet-motion 10s linear
          z-index 1
          height 100%
          display flex
          flex-flow column nowrap
          align-items center
          justify-content center
          .event
            display block
            width 5px
            height 5px
            border-radius 50%
            background-color black
          .event-comma
            display flex
            flex-flow row nowrap
            width 2px
            height 2px
            font-size 10px
            align-items center
            justify-content center
            transform rotate(90deg)
      &.click
        /deep/ .packet
          .event
            background-color black
            box-shadow 0 0 5px 0 rgba(black,.5)
      &.buffer
        /deep/ .packet
          width 20px
          height 120%
          justify-content space-between
          background-color ivory
          padding 4px
          &::before,
          &::after
            display flex
            flex-flow row nowrap
            align-items center
            justify-content center
            font-size 12px
            width 2px
            height 2px
            font-family 'Fira Code', Menlo, monospace
          &::before
            content '['
            transform rotate(90deg)
          &::after
            content ']'
            transform rotate(90deg)
          .event
            background-color black
            box-shadow 0 0 5px 0 rgba(black,.5)
      &.map
        /deep/ .packet
          display flex
          flex-flow row nowrap
          align-items center
          justify-content center
          background-color ivory
          width 20px
          height 20px
          padding 2px
          font-family 'Fira Code', Menlo, monospace
          font-size 16px
          color black
          .true
            color orangered
      &.double-click
        /deep/ .packet
          .event
            background-color orangered
            box-shadow 0 0 5px 0 rgba(orangered,.5)
